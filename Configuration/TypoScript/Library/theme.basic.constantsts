#############################################
# Basic: Basic constants
#############################################

# cat=theme; type=string; label= Name of the site
themes.configuration.siteName = TYPO3-Theme based on themes_gridelements

# cat=theme; type=string; label= Base URL of the site
themes.configuration.baseurl = /

# cat=theme; type=string; label= Image base URL of the site (http://cdn.domain.tdl/project/Images/; http://www.domain.tdl/fileadmin/project/Images/)
themes.configuration.baseurlImage = typo3conf/ext/theme_bootstrap/Resources/Public/Images/

# cat=theme; type=options[0,1]; label= Use additional CSS/LESS/SASS file?
themes.configuration.useAdditionalCssFile = 0

# cat=theme; type=string; label= Additional local CSS/LESS/SASS file (fileadmin/project/Dyncss/import.less)
themes.configuration.additionalCssFile = fileadmin/project/Dyncss/import.less

# cat=theme; type=string; label= Path and file for favicon (fileadmin/project/Icons/favicon.ico)
themes.configuration.favicon = typo3conf/ext/theme_bootstrap/Resources/Public/Icons/favicon.ico
